{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "paths": {
      "#/database/*": ["database/*"],
      "#/lib/*": ["lib/*"],
      "#/types/*": ["types/*"],
      "#/util/*": ["util/*"],
      "#/shared/*": ["shared/*"],
      "#/modules/*": ["modules/*"]
    }
  }
}
